alias gwtrm='git worktree remove'
alias gwtmv='git worktree move'
alias gwtp='git worktree prune'

# Flutter
alias flformat='dart format lib/* -l 1000'

# Next.js
alias nextUp='pnpm dlx @next/codemod@latest upgrade latest'

